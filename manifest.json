{
  "manifest_version": 2,
  "name": "プロ生ちゃんの時間！",
  "short_name": "プロ生時間",
  "version": "2.1.1",

  "description": "プロ生ちゃんが時間を教えてくれるよ！",
  "icons": {
    "16": "icon/icon16.png",
    "48": "icon/icon48.png",
    "128": "icon/icon128.png"
  },

  "browser_action": {
    "default_icon": "icon/icon128.png",
    "default_title": "Pronama Time"
  },

  "permissions": ["notifications", "alarms", "storage"],

  "background": {
    "scripts": ["main.js"]
  }
}
